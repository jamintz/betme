
<h1>Live Contests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
	  <th>Closes At</th>
      <th>Pot</th>
      <th>Owner</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= Game.expire(game.expires) %></td>
        <td>$<%= game.pot %></td>
        <td><%= game.user.email %></td>
        <td><%= game.type %></td>
        <td><%= link_to 'Play', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>

